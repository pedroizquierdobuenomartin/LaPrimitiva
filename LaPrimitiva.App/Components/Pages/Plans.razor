@page "/plans"
@using LaPrimitiva.Application.Services
@using LaPrimitiva.Application.DTOs
@using LaPrimitiva.Domain.Entities
@using LaPrimitiva.Infrastructure.Persistence
@using Microsoft.EntityFrameworkCore
@using Microsoft.Extensions.Localization
@using LaPrimitiva.Domain.Localization
@inject IStringLocalizer<PrimitivaResource> L
@inject GlobalState GlobalState
@inject PlanService PlanService
@inject DrawGenerationService DrawGenService
@inject NavigationManager Nav
@inject IJSRuntime JS
@implements IDisposable

<PageTitle>@L["Plans"] - La Primitiva Audit</PageTitle>

<div class="space-y-8">
    <div class="flex justify-between items-center">
        <div>
            <h2 class="text-3xl font-extrabold text-slate-900 border-b-4 border-blue-500 pb-1">@L["PlanManagement"]</h2>
            <p class="text-slate-500 mt-2 font-medium">@L["ConfigurePlanRules"] <span class="text-blue-600 font-bold">@GlobalState.SelectedYear</span>.</p>
        </div>
        <button @onclick="ShowCreateModal" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2.5 rounded-xl font-bold shadow-lg shadow-blue-200 transition-all flex items-center gap-2 transform hover:scale-105">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            @L["NewPlan"]
        </button>
    </div>

    <div class="grid grid-cols-1 xl:grid-cols-2 gap-8">
        @if (plans == null)
        {
            <div class="flex justify-center p-24 col-span-2">
                <div class="animate-spin rounded-full h-16 w-16 border-4 border-blue-100 border-t-blue-600"></div>
            </div>
        }
        else if (!plans.Any())
        {
            <div class="col-span-2 py-20 bg-white rounded-3xl border-2 border-dashed border-slate-100 flex flex-col items-center justify-center text-center">
                <div class="h-20 w-20 bg-slate-50 rounded-full flex items-center justify-center text-slate-300 mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
                    </svg>
                </div>
                <h4 class="text-lg font-bold text-slate-900">No hay planes para @GlobalState.SelectedYear</h4>
                <p class="text-slate-400 max-w-xs mt-1">Crea un nuevo plan o cambia el año seleccionado para ver otros planes.</p>
            </div>
        }
        else
        {
            @foreach (var plan in plans)
            {
                <div class="@(plan.HasOverlap ? "bg-red-50/50 border-red-200" : "bg-white border-slate-200") rounded-2xl border shadow-sm overflow-hidden flex flex-col hover:shadow-md transition-shadow relative">
                    @if (plan.HasOverlap)
                    {
                        <div class="absolute top-0 right-0 bg-red-600 text-white text-[10px] font-black px-3 py-1 rounded-bl-xl uppercase tracking-widest flex items-center gap-1 shadow-lg z-10">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" viewBox="0 0 20 20" fill="currentColor">
                                <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                            </svg>
                            Fechas Superpuestas
                        </div>
                    }

                    <div class="p-6 border-b @(plan.HasOverlap ? "border-red-100 bg-red-100/30" : "border-slate-50 bg-slate-50/50") flex justify-between items-start">
                        <div>
                            <div class="flex items-center gap-2">
                                <h3 class="text-xl font-bold text-slate-900 uppercase">@plan.Name</h3>
                            </div>
                            <div class="text-sm @(plan.HasOverlap ? "text-red-600 font-bold" : "text-slate-500") mt-1 font-mono">
                                @plan.EffectiveFrom.ToString("dd/MM/yyyy") - 
                                @(plan.EffectiveTo?.ToString("dd/MM/yyyy") ?? "Indefinido")
                            </div>
                        </div>
                        <div class="flex gap-2">
                            <button @onclick="() => ShowEditModal(plan)" class="text-[10px] bg-slate-100 text-slate-600 px-3 py-1.5 rounded-lg border border-slate-200 hover:bg-slate-200 font-bold uppercase transition-colors">
                                @L["Edit"]
                            </button>
                            <button @onclick="() => DeletePlan(plan)" class="text-[10px] bg-red-50 text-red-600 px-3 py-1.5 rounded-lg border border-red-100 hover:bg-red-100 font-bold uppercase transition-colors">
                                @L["Delete"]
                            </button>
                            <button @onclick="() => HandlePlanAction(plan)" class="text-[10px] @(plan.HasDraws ? "bg-blue-50 text-blue-700 border-blue-100 hover:bg-blue-100" : "bg-emerald-50 text-emerald-700 border-emerald-100 hover:bg-emerald-100") px-3 py-1.5 rounded-lg border font-black uppercase tracking-wider transition-colors">
                                @(plan.HasDraws ? L["ViewDraws"] : L["GenerateDraws"])
                            </button>
                        </div>
                    </div>
                    
                    <div class="p-6 grid grid-cols-2 gap-6 flex-1">
                        <div class="p-4 bg-slate-50/50 rounded-xl space-y-1">
                            <div class="text-[10px] font-black text-slate-400 uppercase tracking-widest">@L["CostPerBet"]</div>
                            <div class="text-xl font-black text-slate-900">@plan.CostPerBet.ToString("N2")€</div>
                        </div>
                        <div class="p-4 bg-slate-50/50 rounded-xl space-y-1">
                            <div class="text-[10px] font-black text-slate-400 uppercase tracking-widest">@L["BetsPerDraw"]</div>
                            <div class="text-xl font-black text-slate-900">@plan.BetsPerDraw (@L["FixedLabel"] + Auto)</div>
                        </div>
                        <div class="p-4 bg-blue-50/30 rounded-xl space-y-1">
                            <div class="text-[10px] font-black text-blue-400 uppercase tracking-widest">@L["JokerActive"]</div>
                            <div class="text-xl font-black text-blue-700">@(plan.EnableJoker ? L["Yes"] : L["No"])</div>
                        </div>
                        <div class="p-4 bg-blue-50/30 rounded-xl space-y-1">
                            <div class="text-[10px] font-black text-blue-400 uppercase tracking-widest">@L["JokerCost"]</div>
                            <div class="text-xl font-black text-blue-700">@plan.JokerCostPerBet.ToString("N2")€</div>
                        </div>
                        <div class="col-span-2 pt-2">
                            <div class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1">@L["FixedLabel"]</div>
                            <div class="text-sm text-slate-600 italic font-medium">"@plan.FixedCombinationLabel"</div>
                        </div>
                    </div>

                    @if (plan.HasOverlap)
                    {
                        <div class="px-6 py-3 bg-red-600/10 border-t border-red-100/50 flex items-start gap-3">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-red-600 mt-0.5 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                            </svg>
                            <p class="text-[11px] font-bold text-red-800 leading-tight">
                                Este plan se solapa con otro en el mismo periodo. 
                                Las reglas de negocio y costes podrían no ser coherentes para los sorteos en estas fechas.
                            </p>
                        </div>
                    }
                    
                    <div class="p-4 @(plan.HasOverlap ? "bg-red-50/50 border-t border-red-100" : "bg-slate-50 border-t border-slate-100") flex justify-end gap-2 text-[10px] font-bold text-slate-400">
                        Creado @plan.CreatedAt.ToString("g")
                    </div>
                </div>
            }
        }
    </div>
</div>

@if (showModal)
{
    <div class="fixed inset-0 bg-slate-900/60 backdrop-blur-md z-50 flex items-center justify-center p-4 animate-in fade-in duration-200">
        <div class="bg-white rounded-[2rem] shadow-2xl w-full max-w-lg overflow-hidden border border-slate-200 transform animate-in zoom-in-95 duration-200">
            <div class="p-8 border-b border-slate-100 flex justify-between items-center bg-white">
                <div>
                    <h3 class="text-2xl font-black text-slate-900 uppercase">@(isEditing ? "Editar Plan" : "Nuevo Plan")</h3>
                    <p class="text-slate-400 text-xs font-medium uppercase tracking-widest">Configuración de periodo y costes</p>
                </div>
                <button @onclick="() => showModal = false" class="h-10 w-10 rounded-xl flex items-center justify-center text-slate-300 hover:text-slate-900 hover:bg-slate-50 transition-all">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
            
            @if (!string.IsNullOrEmpty(errorMessage))
            {
                <div class="mx-8 mt-6 p-4 bg-red-50 border border-red-100 rounded-2xl flex gap-3 items-center animate-in slide-in-from-top-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-red-500 shrink-0" viewBox="0 0 20 20" fill="currentColor">
                        <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                    </svg>
                    <p class="text-xs font-bold text-red-700">@errorMessage</p>
                </div>
            }
            <div class="p-8 space-y-6 bg-slate-50/30">
                <div>
                    <label class="block text-[10px] font-black text-slate-400 uppercase tracking-widest mb-2 px-1">Nombre</label>
                    <input @bind="newPlan.Name" class="w-full bg-white border-2 border-slate-100 rounded-2xl p-4 text-sm font-bold text-slate-700 focus:ring-4 focus:ring-blue-500/10 focus:border-blue-500 outline-none transition-all" placeholder="Ej: Plan 2027" />
                </div>
                <div class="grid grid-cols-2 gap-6">
                    <div>
                        <label class="block text-[10px] font-black text-slate-400 uppercase tracking-widest mb-2 px-1">Desde</label>
                        <input type="date" @bind="newPlan.EffectiveFrom" class="w-full bg-white border-2 border-slate-100 rounded-2xl p-4 text-sm font-bold text-slate-700 focus:border-blue-500 outline-none transition-all" />
                    </div>
                    <div>
                        <label class="block text-[10px] font-black text-slate-400 uppercase tracking-widest mb-2 px-1">Hasta</label>
                        <input type="date" @bind="newPlan.EffectiveTo" class="w-full bg-white border-2 border-slate-100 rounded-2xl p-4 text-sm font-bold text-slate-700 focus:border-blue-500 outline-none transition-all" />
                    </div>
                </div>
                <div class="grid grid-cols-2 gap-6">
                    <div>
                        <label class="block text-[10px] font-black text-slate-400 uppercase tracking-widest mb-2 px-1">Coste Apuesta (€)</label>
                        <input type="number" step="0.01" @bind="newPlan.CostPerBet" class="w-full bg-white border-2 border-slate-100 rounded-2xl p-4 text-sm font-bold text-slate-700 focus:border-blue-500 outline-none transition-all" />
                    </div>
                    <div>
                        <label class="block text-[10px] font-black text-slate-400 uppercase tracking-widest mb-2 px-1">Coste Joker (€)</label>
                        <input type="number" step="0.01" @bind="newPlan.JokerCostPerBet" class="w-full bg-white border-2 border-slate-100 rounded-2xl p-4 text-sm font-bold text-slate-700 focus:border-blue-500 outline-none transition-all" />
                    </div>
                </div>
                <div class="flex items-center gap-4 py-2 px-1">
                    <label class="relative inline-flex items-center cursor-pointer">
                        <input type="checkbox" @bind="newPlan.EnableJoker" class="sr-only peer">
                        <div class="w-11 h-6 bg-slate-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
                        <span class="ml-3 text-sm font-black text-slate-700 uppercase tracking-wider">Activar Joker</span>
                    </label>
                </div>
            </div>
            <div class="p-8 bg-white flex gap-4 border-t border-slate-100">
                <button @onclick="SavePlan" class="flex-1 bg-slate-900 hover:bg-black text-white font-black py-4 rounded-2xl shadow-xl transition-all uppercase tracking-widest text-sm">Guardar Plan</button>
                <button @onclick="() => showModal = false" class="flex-1 bg-slate-50 text-slate-500 font-bold py-4 rounded-2xl hover:bg-slate-100 transition-all uppercase tracking-widest text-sm">Cancelar</button>
            </div>
        </div>
    </div>
}

@if (_planToDelete != null)
{
    <div class="fixed inset-0 z-[60] flex items-center justify-center p-4 bg-slate-900/80 backdrop-blur-sm transition-all animate-in fade-in duration-200">
        <div class="bg-white rounded-3xl shadow-2xl w-full max-w-md overflow-hidden animate-in zoom-in duration-200 p-8 text-center space-y-6 border border-slate-100">
            <div class="h-20 w-20 bg-red-100 rounded-full flex items-center justify-center mx-auto text-red-600 shadow-inner">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
            </div>
            
            <div>
                <h3 class="text-xl font-black text-slate-900 uppercase tracking-tight">¿Eliminar @_planToDelete.Name?</h3>
                
                @if (_hasLinkedDraws)
                {
                    <div class="mt-4 p-4 bg-amber-50 border border-amber-100 rounded-2xl flex flex-col gap-2 items-center animate-in slide-in-from-top-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-amber-500" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                        </svg>
                        <p class="text-sm font-bold text-amber-800 leading-tight">No se puede borrar el plan</p>
                        <p class="text-xs text-amber-700">Primero debes borrar todos los sorteos asociados a este plan en la sección de Registro.</p>
                    </div>
                }
                else if (!string.IsNullOrEmpty(_deleteErrorMessage))
                {
                    <div class="mt-4 p-4 bg-red-50 border border-red-100 rounded-2xl flex flex-col gap-2 items-center animate-in slide-in-from-top-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-red-500" viewBox="0 0 20 20" fill="currentColor">
                            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
                        </svg>
                        <p class="text-sm font-bold text-red-800 leading-tight">Error</p>
                        <p class="text-xs text-red-700">@_deleteErrorMessage</p>
                    </div>
                }
                else
                {
                    <p class="text-slate-500 mt-2 text-sm leading-relaxed font-medium">
                        Estás a punto de eliminar permanentemente este plan y todas sus configuraciones asociadas.
                        <br/><br/>
                        <span class="text-red-600 font-bold bg-red-50 px-2 py-0.5 rounded-lg">Esta acción es irreversible.</span>
                    </p>
                }
            </div>

            <div class="grid @(_hasLinkedDraws ? "grid-cols-1" : "grid-cols-2") gap-4 pt-2">
                <button @onclick="CancelDelete" class="px-4 py-3.5 rounded-2xl text-xs font-black text-slate-500 bg-slate-100 hover:bg-slate-200 transition-all uppercase tracking-widest text-wrap">
                    @(_hasLinkedDraws ? "Entendido" : "Cancelar")
                </button>
                @if (!_hasLinkedDraws)
                {
                    <button @onclick="ConfirmDelete" class="px-4 py-3.5 rounded-2xl text-xs font-black text-white bg-red-600 hover:bg-red-700 shadow-xl shadow-red-200 transition-all active:scale-95 uppercase tracking-widest">
                        Sí, Eliminar
                    </button>
                }
            </div>
        </div>
    </div>
}

@code {
    private List<PlanDto>? plans;
    private bool showModal = false;
    private bool isEditing = false;
    private string? errorMessage;
    private Plan newPlan = new Plan { EffectiveFrom = DateTime.Today };
    private PlanDto? _planToDelete;
    private string? _deleteErrorMessage;
    private bool _hasLinkedDraws;
    private bool _isLoading;

    protected override async Task OnInitializedAsync()
    {
        GlobalState.OnChange += HandleStateChange;
        await LoadData();
    }

    private async void HandleStateChange()
    {
        await InvokeAsync(async () => 
        {
            await LoadData();
            StateHasChanged();
        });
    }

    private async Task LoadData()
    {
        if (_isLoading) return;
        _isLoading = true;
        try 
        {
            plans = await PlanService.GetPlansByYearAsync(GlobalState.SelectedYear);
        }
        finally 
        {
            _isLoading = false;
        }
    }

    private void ShowCreateModal()
    {
        errorMessage = null;
        isEditing = false;
        var year = GlobalState.SelectedYear;
        newPlan = new Plan 
        { 
            Name = $"Plan {year}", 
            EffectiveFrom = new DateTime(year, 1, 1), 
            EffectiveTo = new DateTime(year, 12, 31) 
        };
        showModal = true;
    }

    private async Task ShowEditModal(PlanDto planDto)
    {
        errorMessage = null;
        isEditing = true;
        var plan = await PlanService.GetPlanByIdAsync(planDto.Id);
        if (plan != null)
        {
            // Map DTO to Entity for form binding
            newPlan = new Plan
            {
                Id = plan.Id,
                Name = plan.Name,
                EffectiveFrom = plan.EffectiveFrom,
                EffectiveTo = plan.EffectiveTo,
                CostPerBet = plan.CostPerBet,
                BetsPerDraw = plan.BetsPerDraw,
                EnableJoker = plan.EnableJoker,
                JokerCostPerBet = plan.JokerCostPerBet,
                FixedCombinationLabel = plan.FixedCombinationLabel
            };
            showModal = true;
        }
        else 
        {
            await LoadData();
        }
    }

    private async Task SavePlan()
    {
        try 
        {
            errorMessage = null;
            if (isEditing)
            {
                await PlanService.UpdatePlanAsync(newPlan);
            }
            else
            {
                await PlanService.CreatePlanAsync(newPlan);
            }
            showModal = false;
            await LoadData();
        }
        catch (InvalidOperationException ex)
        {
            errorMessage = ex.Message;
        }
        catch (Exception)
        {
            errorMessage = "Ha ocurrido un error inesperado al guardar el plan.";
        }
    }

    private async Task DeletePlan(PlanDto plan)
    {
        _deleteErrorMessage = null;
        _hasLinkedDraws = plan.HasDraws;
        _planToDelete = plan;
        StateHasChanged();
    }

    private void CancelDelete()
    {
        _planToDelete = null;
        _deleteErrorMessage = null;
        _hasLinkedDraws = false;
    }

    private async Task ConfirmDelete()
    {
        if (_planToDelete == null || _hasLinkedDraws) return;

        try 
        {
            await PlanService.DeletePlanAsync(_planToDelete.Id);
            _planToDelete = null;
            _deleteErrorMessage = null;
            _hasLinkedDraws = false;
            await LoadData();
        }
        catch (InvalidOperationException ex)
        {
            _deleteErrorMessage = ex.Message;
            _hasLinkedDraws = true; // Refresh state if backend rejected it
        }
        catch (Exception)
        {
            _deleteErrorMessage = "Ha ocurrido un error inesperado al intentar borrar el plan.";
        }
    }

    private void HandlePlanAction(PlanDto plan)
    {
        // 2.- Cuando se clique en Generar sorteos (no tiene sorteos) debe llevar a Registro del año del plan.
        // 3.- Cuando se clique en Ver Sorteos debe llevar a Registro con el filtro de la fecha del plan para ver solo los sorteos asociados al plan.
        
        GlobalState.SelectedYear = plan.EffectiveFrom.Year;
        
        if (plan.HasDraws)
        {
            GlobalState.SelectedPlanId = plan.Id;
        }
        else 
        {
            GlobalState.SelectedPlanId = null;
        }
        
        Nav.NavigateTo("/register");
    }

    public void Dispose()
    {
        GlobalState.OnChange -= HandleStateChange;
    }
}
