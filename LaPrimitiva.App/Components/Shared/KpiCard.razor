<div class="bg-white p-6 rounded-2xl border border-slate-100 shadow-sm flex flex-col gap-1">
    <div class="text-xs font-semibold text-slate-500 uppercase tracking-wider">@Title</div>
    <div class="text-2xl font-bold text-slate-900">@Value</div>
    @if (!string.IsNullOrEmpty(SubValue))
    {
        <div class="text-sm @(IsPositive ? "text-emerald-600" : "text-slate-500") font-medium">
            @SubValue
        </div>
    }
</div>

@code {
    [Parameter] public string Title { get; set; } = "";
    [Parameter] public string Value { get; set; } = "";
    [Parameter] public string? SubValue { get; set; }
    [Parameter] public bool IsPositive { get; set; } = true;
}
