@page "/plans"
@using LaPrimitiva.Application.Services
@using LaPrimitiva.Domain.Entities
@using LaPrimitiva.Infrastructure.Persistence
@using Microsoft.EntityFrameworkCore
@inject PrimitivaDbContext Db
@inject GlobalState GlobalState
@inject PlanService PlanService
@inject DrawGenerationService DrawGenService
@inject NavigationManager Nav
@implements IDisposable

<PageTitle>Planes - La Primitiva Audit</PageTitle>

<div class="space-y-8">
    <div class="flex justify-between items-center">
        <div>
            <h2 class="text-3xl font-extrabold text-slate-900 border-b-4 border-blue-500 pb-1">Gestión de Planes</h2>
            <p class="text-slate-500 mt-2 font-medium">Configura versiones de costes y reglas para el año <span class="text-blue-600 font-bold">@GlobalState.SelectedYear</span>.</p>
        </div>
        <button @onclick="ShowCreateModal" class="bg-blue-600 hover:bg-blue-700 text-white px-6 py-2.5 rounded-xl font-bold shadow-lg shadow-blue-200 transition-all flex items-center gap-2 transform hover:scale-105">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Nuevo Plan
        </button>
    </div>

    <div class="grid grid-cols-1 xl:grid-cols-2 gap-8">
        @if (plans == null)
        {
            <div class="flex justify-center p-24 col-span-2">
                <div class="animate-spin rounded-full h-16 w-16 border-4 border-blue-100 border-t-blue-600"></div>
            </div>
        }
        else if (!plans.Any())
        {
            <div class="col-span-2 py-20 bg-white rounded-3xl border-2 border-dashed border-slate-100 flex flex-col items-center justify-center text-center">
                <div class="h-20 w-20 bg-slate-50 rounded-full flex items-center justify-center text-slate-300 mb-4">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-10 w-10" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
                    </svg>
                </div>
                <h4 class="text-lg font-bold text-slate-900">No hay planes para @GlobalState.SelectedYear</h4>
                <p class="text-slate-400 max-w-xs mt-1">Crea un nuevo plan o cambia el año seleccionado para ver otros planes.</p>
            </div>
        }
        else
        {
            @foreach (var plan in plans)
            {
                <div class="bg-white rounded-2xl border border-slate-200 shadow-sm overflow-hidden flex flex-col hover:shadow-md transition-shadow">
                    <div class="p-6 border-b border-slate-50 bg-slate-50/50 flex justify-between items-start">
                        <div>
                            <h3 class="text-xl font-bold text-slate-900 uppercase">@plan.Name</h3>
                            <div class="text-sm text-slate-500 mt-1 font-mono">
                                @plan.EffectiveFrom.ToString("dd/MM/yyyy") - 
                                @(plan.EffectiveTo?.ToString("dd/MM/yyyy") ?? "Indefinido")
                            </div>
                        </div>
                        <div class="flex gap-2">
                            <button @onclick="() => GenerateDraws(plan)" class="text-[10px] bg-emerald-50 text-emerald-700 px-3 py-1.5 rounded-lg border border-emerald-100 hover:bg-emerald-100 font-black uppercase tracking-wider transition-colors">
                                Generar Sorteos
                            </button>
                        </div>
                    </div>
                    
                    <div class="p-6 grid grid-cols-2 gap-6 flex-1">
                        <div class="p-4 bg-slate-50/50 rounded-xl space-y-1">
                            <div class="text-[10px] font-black text-slate-400 uppercase tracking-widest">Coste por Apuesta</div>
                            <div class="text-xl font-black text-slate-900">@plan.CostPerBet.ToString("N2")€</div>
                        </div>
                        <div class="p-4 bg-slate-50/50 rounded-xl space-y-1">
                            <div class="text-[10px] font-black text-slate-400 uppercase tracking-widest">Apuestas/Sorteo</div>
                            <div class="text-xl font-black text-slate-900">@plan.BetsPerDraw (Fija + Auto)</div>
                        </div>
                        <div class="p-4 bg-blue-50/30 rounded-xl space-y-1">
                            <div class="text-[10px] font-black text-blue-400 uppercase tracking-widest">Joker Activo</div>
                            <div class="text-xl font-black text-blue-700">@(plan.EnableJoker ? "SÍ" : "NO")</div>
                        </div>
                        <div class="p-4 bg-blue-50/30 rounded-xl space-y-1">
                            <div class="text-[10px] font-black text-blue-400 uppercase tracking-widest">Coste Joker</div>
                            <div class="text-xl font-black text-blue-700">@plan.JokerCostPerBet.ToString("N2")€</div>
                        </div>
                        <div class="col-span-2 pt-2">
                            <div class="text-[10px] font-black text-slate-400 uppercase tracking-widest mb-1">Etiqueta Fija</div>
                            <div class="text-sm text-slate-600 italic font-medium">"@plan.FixedCombinationLabel"</div>
                        </div>
                    </div>

                    <div class="p-4 bg-slate-50 border-t border-slate-100 flex justify-end gap-2 text-[10px] font-bold text-slate-400">
                        Creado @plan.CreatedAt.ToString("g")
                    </div>
                </div>
            }
        }
    </div>
</div>

@if (showModal)
{
    <div class="fixed inset-0 bg-slate-900/60 backdrop-blur-md z-50 flex items-center justify-center p-4 animate-in fade-in duration-200">
        <div class="bg-white rounded-[2rem] shadow-2xl w-full max-w-lg overflow-hidden border border-slate-200 transform animate-in zoom-in-95 duration-200">
            <div class="p-8 border-b border-slate-100 flex justify-between items-center bg-white">
                <div>
                    <h3 class="text-2xl font-black text-slate-900 uppercase">Nuevo Plan</h3>
                    <p class="text-slate-400 text-xs font-medium uppercase tracking-widest">Configuración inicial de periodo</p>
                </div>
                <button @onclick="() => showModal = false" class="h-10 w-10 rounded-xl flex items-center justify-center text-slate-300 hover:text-slate-900 hover:bg-slate-50 transition-all">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </button>
            </div>
            <div class="p-8 space-y-6 bg-slate-50/30">
                <div>
                    <label class="block text-[10px] font-black text-slate-400 uppercase tracking-widest mb-2 px-1">Nombre</label>
                    <input @bind="newPlan.Name" class="w-full bg-white border-2 border-slate-100 rounded-2xl p-4 text-sm font-bold text-slate-700 focus:ring-4 focus:ring-blue-500/10 focus:border-blue-500 outline-none transition-all" placeholder="Ej: Plan 2027" />
                </div>
                <div class="grid grid-cols-2 gap-6">
                    <div>
                        <label class="block text-[10px] font-black text-slate-400 uppercase tracking-widest mb-2 px-1">Desde</label>
                        <input type="date" @bind="newPlan.EffectiveFrom" class="w-full bg-white border-2 border-slate-100 rounded-2xl p-4 text-sm font-bold text-slate-700 focus:border-blue-500 outline-none transition-all" />
                    </div>
                    <div>
                        <label class="block text-[10px] font-black text-slate-400 uppercase tracking-widest mb-2 px-1">Hasta</label>
                        <input type="date" @bind="newPlan.EffectiveTo" class="w-full bg-white border-2 border-slate-100 rounded-2xl p-4 text-sm font-bold text-slate-700 focus:border-blue-500 outline-none transition-all" />
                    </div>
                </div>
                <div class="grid grid-cols-2 gap-6">
                    <div>
                        <label class="block text-[10px] font-black text-slate-400 uppercase tracking-widest mb-2 px-1">Coste Apuesta (€)</label>
                        <input type="number" step="0.01" @bind="newPlan.CostPerBet" class="w-full bg-white border-2 border-slate-100 rounded-2xl p-4 text-sm font-bold text-slate-700 focus:border-blue-500 outline-none transition-all" />
                    </div>
                    <div>
                        <label class="block text-[10px] font-black text-slate-400 uppercase tracking-widest mb-2 px-1">Coste Joker (€)</label>
                        <input type="number" step="0.01" @bind="newPlan.JokerCostPerBet" class="w-full bg-white border-2 border-slate-100 rounded-2xl p-4 text-sm font-bold text-slate-700 focus:border-blue-500 outline-none transition-all" />
                    </div>
                </div>
                <div class="flex items-center gap-4 py-2 px-1">
                    <label class="relative inline-flex items-center cursor-pointer">
                        <input type="checkbox" @bind="newPlan.EnableJoker" class="sr-only peer">
                        <div class="w-11 h-6 bg-slate-200 peer-focus:outline-none peer-focus:ring-4 peer-focus:ring-blue-300 rounded-full peer peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-5 after:w-5 after:transition-all peer-checked:bg-blue-600"></div>
                        <span class="ml-3 text-sm font-black text-slate-700 uppercase tracking-wider">Activar Joker</span>
                    </label>
                </div>
            </div>
            <div class="p-8 bg-white flex gap-4 border-t border-slate-100">
                <button @onclick="SavePlan" class="flex-1 bg-slate-900 hover:bg-black text-white font-black py-4 rounded-2xl shadow-xl transition-all uppercase tracking-widest text-sm">Guardar Plan</button>
                <button @onclick="() => showModal = false" class="flex-1 bg-slate-50 text-slate-500 font-bold py-4 rounded-2xl hover:bg-slate-100 transition-all uppercase tracking-widest text-sm">Cancelar</button>
            </div>
        </div>
    </div>
}

@code {
    private List<Plan>? plans;
    private bool showModal = false;
    private Plan newPlan = new Plan { EffectiveFrom = DateTime.Today };

    protected override async Task OnInitializedAsync()
    {
        GlobalState.OnChange += HandleStateChange;
        await LoadData();
    }

    private async void HandleStateChange()
    {
        await LoadData();
        StateHasChanged();
    }

    private async Task LoadData()
    {
        plans = await PlanService.GetPlansByYearAsync(GlobalState.SelectedYear);
    }

    private void ShowCreateModal()
    {
        var year = GlobalState.SelectedYear;
        newPlan = new Plan 
        { 
            Name = $"Plan {year}", 
            EffectiveFrom = new DateTime(year, 1, 1), 
            EffectiveTo = new DateTime(year, 12, 31) 
        };
        showModal = true;
    }

    private async Task SavePlan()
    {
        await PlanService.CreatePlanAsync(newPlan);
        showModal = false;
        await LoadData();
    }

    private async Task GenerateDraws(Plan plan)
    {
        if (plan.EffectiveTo == null) return;
        
        var existingCount = await Db.DrawRecords.CountAsync(d => d.PlanId == plan.Id);
        if (existingCount > 0) return;

        var newDraws = DrawGenService.GenerateDrawsForRange(plan.Id, plan.EffectiveFrom, plan.EffectiveTo.Value);
        var existingDates = await Db.DrawRecords.Select(d => d.DrawDate).ToListAsync();
        var drawsToAdd = newDraws.Where(nd => !existingDates.Contains(nd.DrawDate)).ToList();

        Db.DrawRecords.AddRange(drawsToAdd);
        await Db.SaveChangesAsync();
        
        Nav.NavigateTo("/register");
    }

    public void Dispose()
    {
        GlobalState.OnChange -= HandleStateChange;
    }
}
